{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "Run OpenGL Program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "cwd": "${fileDirname}",
      "externalConsole": true,
      "preLaunchTask": "Build OpenGL Program (Debug)",
      "MIMode": "gdb",
      "setupCommands": [
        {
          "text": "-gdb-set new-console on"
        }
      ]
    },
    {
      "name": "Debug OpenGL Program",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}.exe",
      "cwd": "${fileDirname}",
      "MIMode": "gdb",
      "externalConsole": true,
      "preLaunchTask": "Build OpenGL Program (Debug)",
      "stopAtEntry": true
    },
    {
      "name": "Run OpenGL Program (Release)",
      "type": "cppdbg",
      "request": "launch",
      "program": "${fileDirname}/${fileBasenameNoExtension}_release.exe",
      "cwd": "${fileDirname}",
      "externalConsole": true,
      "preLaunchTask": "Build OpenGL Program (Release)"
    },
    {
      "name": "C/C++ Runner: Debug Session",
      "type": "cppdbg",
      "request": "launch",
      "args": [],
      "stopAtEntry": false,
      "externalConsole": true,
      "cwd": "c:/Users/mohiu/Documents/Labs/CG/Lab2",
      "program": "c:/Users/mohiu/Documents/Labs/CG/Lab2/build/Debug/outDebug",
      "MIMode": "gdb",
      "miDebuggerPath": "gdb",
      "setupCommands": [
        {
          "description": "Enable pretty-printing for gdb",
          "text": "-enable-pretty-printing",
          "ignoreFailures": true
        }
      ]
    }
  ]
}
